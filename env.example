# Application Configuration
SPRING_PROFILES_ACTIVE=dev
PORT=8080

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/chatwoot_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Payment Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@weavecode.co.uk
SENDGRID_FROM_NAME=WeaveCode Chatwoot

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Multi-tenant Configuration
MULTI_TENANT_DEFAULT_DOMAIN=weavecode.co.uk
MULTI_TENANT_SUBDOMAIN_PATTERN={tenant}.weavecode.co.uk

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=10000
CACHE_WARMING_ENABLED=true
CACHE_WARMING_INTERVAL=300000

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN

# WebSocket Configuration
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,https://weavecode.co.uk

# Railway Specific
RAILWAY_STATIC_URL=your-railway-static-url
RAILWAY_PROJECT_ID=your-railway-project-id
